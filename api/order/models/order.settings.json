{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "Order",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "amount": {
      "type": "decimal",
      "required": true
    },
    "bookingNote": {
      "type": "string"
    },
    "product": {
      "model": "product"
    },
    "customerName": {
      "type": "string",
      "required": true
    },
    "customerPhone": {
      "type": "string",
      "private": true,
      "required": true
    },
    "customerAddress": {
      "type": "string"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "New",
        "Confirmed",
        "Paid",
        "Cancelled",
        "Pending"
      ],
      "default": "New"
    }
  }
}
